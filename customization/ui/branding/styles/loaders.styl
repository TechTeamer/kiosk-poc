@require "colors"

.loader
  &.spin
    display inline-block
    position relative
    width 80px
    height 80px

    span
      box-sizing border-box
      display block
      position absolute
      width 70px
      height 70px
      margin 5px
      border-radius 50%
      animation loading-ring 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite
      border-width 7px
      border-style solid
      border-color loading-animation-color transparent transparent transparent

      &:nth-child(1)
        animation-delay -0.45s

      &:nth-child(2)
        animation-delay -0.3s

      &:nth-child(3)
        animation-delay -0.15s

  &.ring
    display block
    border-radius 50%
    width 80px
    height 80px
    border 8px solid rgba(loading-animation-color, 0.2)
    border-top-color loading-animation-color
    animation loading-ring 1s infinite linear


@keyframes loading-ring
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)
