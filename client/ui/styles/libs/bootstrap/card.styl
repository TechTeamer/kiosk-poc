.card
  display block
  margin 0 0 15px
  border-width 0
  border-style solid
  border-radius 0
  border-color card-border-color
  background-color card-bg-color
  color card-text-color

  .card-header
    margin 0
    padding 11px 15px 0
    line-height 18px
    font-size 14px
    font-weight 700
    border 1px solid card-header-border-color
    background-color card-header-bg-color
    color card-header-text-color

  .card-body
    padding 15px


/* TABLET *************************************************************************************************************/
@media screen and (min-width: 768px)
  .card
    margin 0 0 20px


/* LARGE TABLET *******************************************************************************************************/
@media (min-device-width: 992px) and (max-device-width: 1366px) and (min-device-height: 1024px) and (-webkit-min-device-pixel-ratio: 2)
  .card
    margin 0 0 30px

    .card-header
      padding 28px 30px 0
      border-width 2px
      line-height 30px
      font-size 25px

    .card-body
      padding 30px
