    margin-bottom 30px

    .control-label
      margin-bottom 10px
      line-height 30px
      font-size 25px

    .error-message
      padding 5px 10px
      line-height 30px
      font-size 25px

  .form-horizontal
    .control-label
      margin-bottom 0
      padding 20px 15px

  .form-control
    height 70px
    padding 18px 20px
    border-width 2px
    line-height 30px
    font-size 25px
    box-shadow inset 0 2px 2px rgba(0,0,0,.075)

  textarea.form-control
    min-height 160px

  select.form-control
    padding 18px 35px 18px 20px

  .custom-select
    &:after
      border-width 10px 8px 0 8px
      margin -5px 0 0
      right 16px

  .custom-file
    .form-control-label
      padding 18px 150px 18px 20px

      .btn
        width 130px
        right -2px
        top -2px

  .checkbox
    padding 0 0 0 50px
    margin 20px 0

    input[type="checkbox"]
      width 50px
      height 50px
      margin 0 0 0 -50px

    label
      margin 0
      padding 10px 0 10px 20px
      line-height 30px
      font-size 25px

      &:before
        width 50px
        height 50px
        border-width 2px
        left -50px

      &:after
        width 50px
        height 50px
        border-width 2px
        left -50px
        line-height 46px
        font-size 36px

  .radio
    padding 0 0 0 50px
    margin 20px 0

    input[type="radio"]
      width 50px
      height 50px
      margin 0 0 0 -50px

    label
      margin 0
      padding 10px 0 10px 20px
      line-height 30px
      font-size 25px

      &:before
        width 50px
        height 50px
        left -50px
        border-radius 25px

      &:after
        width 24px
        height 24px
        border-radius 50%
        left -37px
        top 12px

  .info-group
    .form-group-right
      padding-right 60px

    .info
      bottom 70px

      .info-btn
        width 60px
        height 70px
        line-height 70px
        font-size 50px
        margin 0
        text-align right

      .info-text
        padding 12px 15px
        top 74px

        &:after
          border-width 0 10px 10px 10px
          right 11px
          top -10px

  .mobile-group
    .mobile-fields
      padding-left 140px

      .prefix
        width 70px
        height 70px
        padding 20px 0
        line-height 30px
        font-size 25px

      .provider
        width 70px
        left 70px
        border-right-width 1px

      .number
        border-left-width 1px

  .postfix-group
    .form-group-right
      padding-right 70px

    .postfix
      width 70px
      height 70px
      padding 20px 0
      line-height 30px
      font-size 25px

  .btn-switch
    height 70px
    border-width 2px
    padding 10px

    .text
      padding 8px 20px
      line-height 30px
      font-size 25px

  .mega-option
    margin 0 0 20px

    .inner
      padding 20px 20px 20px 95px
      border-width 2px
      border-radius 10px

      &:before
        width 50px
        height 50px
        border-radius 50%
        box-shadow inset 0 2px 2px rgba(0,0,0,.075)
        left 22px
        top 22px

      &:after
        width 24px
        height 24px
        border-radius 50%
        left 35px
        top 35px

      .title
        line-height 30px
        font-size 25px

      .text
        line-height 26px
        font-size 22px
