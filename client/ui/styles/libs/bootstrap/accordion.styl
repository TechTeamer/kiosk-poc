.accordion
  .accordion-section
    margin 0 0 3px

  .accordion-head
    margin 0

    .btn-collapse
      display block
      padding 10px 50px 10px 15px
      line-height 20px
      text-decoration none
      background-color accordion-head-active-bg-color
      color accordion-head-active-text-color
      font-size 16px
      font-weight 700

      .arrow
        display block
        width 50px
        height 40px
        line-height 39px
        text-align center
        position absolute
        right 0
        top 0

        &.arrow-up
          color accordion-head-active-text-color

        &.arrow-down
          display none
          color accordion-head-text-color

      &.collapsed
        background-color accordion-head-bg-color
        color accordion-head-text-color
        transition background-color .5s

        &:hover
          background-color accordion-head-hover-bg-color
          color accordion-head-hover-text-color

        .arrow
          &.arrow-up
            display none

          &.arrow-down
            display block

  .accordion-body
    padding 15px
    border-top 3px solid accordion-body-border-color
    background-color accordion-body-bg-color
    color accordion-body-text-color


/* TABLET *************************************************************************************************************/
@media (min-width: 768px)
  .accordion
    .accordion-head
      .btn-collapse
        padding 10px 60px 10px 20px

    .accordion-body
      padding 20px


/* LARGE TABLET *******************************************************************************************************/
@media (min-device-width: 992px) and (max-device-width: 1366px) and (min-device-height: 1024px) and (-webkit-min-device-pixel-ratio: 2)
  .accordion
    .accordion-section
      margin 0 0 5px

    .accordion-head
      .btn-collapse
        padding 20px 60px 20px 25px
        line-height 30px
        font-size 25px

        .arrow
          width 70px
          height 70px
          line-height 67px
          font-size 30px

    .accordion-body
      padding 25px
