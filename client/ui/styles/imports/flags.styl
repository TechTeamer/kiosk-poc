.flag
  display inline-block
  width 32px
  height 32px
  background-image url(/img/sprite/flags.png)
  background-repeat no-repeat
  vertical-align middle

  &.flag-hu
    background-position 0 -192px

  &.flag-en
    background-position -384px -128px

  &.flag-ru
    background-position -288px -350px
